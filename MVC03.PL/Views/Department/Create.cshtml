@model CreateDepartmentDto



@{
    ViewData["Title"] = "Create";
}

<h1>Create Page</h1>
<br />
<br />

<form asp-action="Create">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input type="text" asp-for="Name" class ="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>


    </div>
       
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label">Created At</label>
        <input asp-for="CreateAt" class="form-control" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>


    </div>
    <div class="my-3">
        <input type="submit" class="btn btn-primary" value="Create"/>
        <a asp-action="Index" class="btn btn-light">Back To List </a>
    </div>
</form>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}